{
  "hosting": {
    "source": "packages/web",
    "public": "packages/web/public",
    "frameworksBackend": {
      "region": "us-west1"
    },
    "rewrites": [
      {
        "source": "**",
        "function": "ssrnextjsraapp"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/README.md",
      "**/tsconfig.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/**",
      "packages/functions/**"
    ]
  },
  "functions": {
    "source": "packages/functions",
    "runtime": "nodejs18",
    "ignore": [
      "node_modules",
      "tsconfig.json",
      "src"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
