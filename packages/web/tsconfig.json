{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/features/*/index.ts"],
      "@/server/*": ["src/utils/server/*/index.ts"],
      "@/client/*": ["src/utils/client/*/index.ts"],
      "@/shared/*": ["src/utils/shared/*/index.ts"],
      "@/public/*": ["public/*"],
      "@/fonts": ["src/fonts/index.ts"],
      "@/globalCSS": ["src/styles/global.css"]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/types/*.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
